{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@src/*": [
                "src/*"
            ]
        },
        "useUnknownInCatchVariables": false
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "build.ts"
    ],
    "exclude": [
        "node_modules",
        "src/public"
    ]
}
